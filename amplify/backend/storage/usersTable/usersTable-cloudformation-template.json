{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "DynamoDB table for users",
  "Parameters": {
    "env": {
      "Type": "String"
    }
  },
  "Resources": {
    "UsersTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": {
          "Fn::Join": [
            "-",
            [
              "Users",
              {
                "Ref": "env"
              }
            ]
          ]
        },
        "AttributeDefinitions": [
          {
            "AttributeName": "id",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "id",
            "KeyType": "HASH"
          }
        ],
        "BillingMode": "PAY_PER_REQUEST"
      }
    }
  },
  "Outputs": {
    "TableName": {
      "Value": {
        "Ref": "UsersTable"
      }
    },
    "TableArn": {
      "Value": {
        "Fn::GetAtt": [
          "UsersTable",
          "Arn"
        ]
      }
    }
  }
}
